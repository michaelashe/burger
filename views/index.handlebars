<h1>Eat-Dat-Burger!</h1>

<main>
  <div class="container">
    <div class="row">
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <class='burgerAvailable'> {{this.burger_name}}</button>
                  <button id="devour" type="submit">DEVOUR IT!</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Put Dat Burger Here!</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Type Dat Burger!">
      <button type="submit" class="addBurgerButton">Add Dat Burger!</button>
    </form>
  </div>
</div>